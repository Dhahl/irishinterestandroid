<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="17"
        android:background="@color/sideMenuTop"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/logoII"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="30"
            android:src="@drawable/ii_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_weight="70"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <ImageView
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_marginBottom="-10dp"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="70"
            android:paddingTop="13dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:src="@drawable/irish_interest_text"/>

        <TextView
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="0dp"
            android:layout_weight="30"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Find every Irish book ever written."/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="83"
        android:background="@color/sideMenuBackground"
        android:orientation="vertical"
        android:weightSum="100">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Welcome"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23dp"
            android:id="@+id/welcomeTextView"
            android:background="@null"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Contact Us"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23dp"
            android:id="@+id/contactUsTextView"
            android:background="@null"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/sideMenuTop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Join"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23dp"
            android:background="@null"
            android:id="@+id/joinTextView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Sign In"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23dp"
            android:background="@null"
            android:id="@+id/signInTextView"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/sideMenuTop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Settings"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23dp"
            android:background="@null"
            android:id="@+id/settingsTextView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Terms &amp; Conditions"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23dp"
            android:background="@null"
            android:id="@+id/termsAndConditionsTextView"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:text="Privacy Policy"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="23dp"
            android:background="@null"
            android:id="@+id/privacyPolicyTextView"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/sideMenuTop"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="37"
            android:gravity="bottom"
            android:textAlignment="textEnd"
            android:text="Ver: 1.0.5 - Beta"
            tools:ignore="RtlCompat">

        </TextView>
    </LinearLayout>

</LinearLayout>