<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.irishinterest.irishinterest">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name="com.irishinterest.irishinterest.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.irishinterest.irishinterest.fragments.mainScreen.BookDetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name="com.irishinterest.irishinterest.BooksActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name="com.irishinterest.irishinterest.WelcomeActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name="com.irishinterest.irishinterest.ContactUsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name="com.irishinterest.irishinterest.RegisterActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.irishinterest.irishinterest.LoginActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.irishinterest.irishinterest.PublishedBooksActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustNothing"/>
        <activity android:name="com.irishinterest.irishinterest.AuthorsActivity" />
        <activity android:name="com.irishinterest.irishinterest.MyProfileActivity" />
        <activity android:name="com.irishinterest.irishinterest.SettingsActivity" />
        <activity android:name="com.irishinterest.irishinterest.ReviewsActivity" />
        <activity android:name="MyCommentsActivity" />
        <activity android:name="com.irishinterest.irishinterest.MyReviewsActivity" />
        <activity android:name="com.irishinterest.irishinterest.TermsAndConditionsActivity" />
        <activity android:name="com.irishinterest.irishinterest.PrivacyPolicyActivity" />
        <activity android:name=".BookCoverFullScreenPopup"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:screenOrientation="unspecified"
            android:theme="@style/AppTheme.DialogActivity"/>
    </application>

</manifest>